<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvProduct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivproduct"
            android:src="@drawable/dash1"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvproduct_name"
            android:text="Name : "
            android:layout_toRightOf="@+id/ivproduct"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/tvproduct_item_name"-->
            <!--android:text="Pizza"-->
            <!--android:layout_toRightOf="@+id/tvproduct_name"-->
            <!--android:layout_marginLeft="@dimen/activity_horizontal_margin"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvproduct_price"
            android:text="Price : "
            android:layout_below="@+id/tvproduct_name"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/ivproduct"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/tvproduct_qty"-->
            <!--android:text="Quantity : "-->
